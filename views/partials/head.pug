meta(charset='utf-8')
title= metadata.data.title
meta(name='description', content=metadata.data.description)
meta(name='viewport', content='width=device-width, initial-scale=1.0')

meta(property='og:title', content=metadata.data.title)
meta(property='og:type', content='website')
meta(
  property='og:image',
  content=metadata.data.image ? metadata.data.image.url : ''
)

meta(property='twitter:title', content=metadata.data.title)
meta(property='twitter:card', content='summary_large_image')
meta(property='twitter:description', content=metadata.data.description)
meta(property='twitter:image', content=metadata.data.image || '')

link(rel='icon', href='/favicon.ico', sizes='many')
link(rel='icon', href='/icon.svg', type='image/svg+xml')
link(rel='apple-touch-icon', href='icon.png')

link(rel='stylesheet', href='/main.css')

link(rel='manifest', href='site.webmanifest')
meta(name='theme-color', content='#fafafa')

base(href='/')
